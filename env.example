# Django secret key
SECRET_KEY=your-very-secret-key

# Debug mode (True/False)
DEBUG=True
# DEBUG=False # Enable this for production

# Allowed hosts (comma-separated, e.g. localhost,127.0.0.1)
ALLOWED_HOSTS=localhost,127.0.0.1
# ALLOWED_HOSTS=your-production-domain.com # Enable this for production

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000
# CORS_ALLOWED_ORIGINS=https://your-production-domain.com # Enable this for production

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:3000
# CSRF_TRUSTED_ORIGINS=https://your-production-domain.com # Enable this for production

# Redis Configurations
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Database Setup
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# SMTP Settings For Production
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your@email.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Admin Contact
ADMIN_USER_NAME=Admin User
ADMIN_USER_EMAIL=admin@example.com